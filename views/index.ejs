                <li>SITA France</li>
                <li>SITA News</li>
                <li>SITA UK</li>
                <li>SITA Asia</li>
                <li>SITA Poland</li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="small-4 large-12 columns">

            <input id="a" type="number"> + <input id="b" type="number">

            <input id="add" type="submit" value="Add">

            <span id="result"></span>
            
            <form>
                <legend>Add BU</legend>
                <input name="name" placeholder="name">
                <input type="Submit">
            </form>

            <ul class="block-list"></ul>
        </div>
    </div>
    
    </div>
    </section>

    <script src="script.js"></script>
    <script src="/socket.io/socket.io.js"></script>
